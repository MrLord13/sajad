<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sajad_tarakonesh_tree" model="ir.ui.view">
        <field name="name">sajad.tarakonesh.tree</field>
        <field name="model">sajad.tarakonesh</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="con_mostajer"/>
                <field name="con_month"/>
                <field name="noe_tarakonesh"/>
                <field name="elat_tarakonesh"/>
                <field name="mablagh"/>
                <field name="tarikh_tarakonesh"/>
            </tree>
        </field>
    </record>
    <record id="sajad_tarakonesh_form" model="ir.ui.view">
        <field name="name">sajad.tarakonesh.form</field>
        <field name="model">sajad.tarakonesh</field>
        <field name="arch" type="xml">
            <form class="meshkat">
                <sheet>
                    <div class="row d-flex justify-content-center align-items-center p-2">
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="name"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="name"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="con_mostajer"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="con_mostajer"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="con_month"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="con_month"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">

                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="noe_tarakonesh"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="noe_tarakonesh"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="elat_tarakonesh"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="elat_tarakonesh"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="mablagh"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="mablagh"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="tarikh_tarakonesh"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="tarikh_tarakonesh"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="peyvast"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="peyvast"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="tozihat"></label>
                                <div class="col-sm-10 field-char">
                                    <field name="tozihat"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sajad_tarakonesh_action" model="ir.actions.act_window">
        <field name="name">تراکنش</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sajad.tarakonesh</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>