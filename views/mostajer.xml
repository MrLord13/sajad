<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sajad_mostajer_tree" model="ir.ui.view">
        <field name="name">sajad.mostajer.tree</field>
        <field name="model">sajad.mostajer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="full_name"/>
                <field name="nam"/>
                <field name="nam_khanevadegi"/>
                <field name="metraj"/>
                <field name="parking" widget="boolean_toggle"/>
                <field name="phone1"/>
                <field name="phone2"/>
            </tree>
        </field>
    </record>
    <record id="sajad_mostajer_form" model="ir.ui.view">
        <field name="name">sajad.mostajer.form</field>
        <field name="model">sajad.mostajer</field>
        <field name="arch" type="xml">
            <form class="meshkat">
                <sheet>
                    <div class="row d-flex justify-content-center align-items-center p-2">
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="name"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="name"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="full_name"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="full_name"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="nam"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="nam"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="nam_khanevadegi"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="nam_khanevadegi"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="phone1"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="phone1"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="phone2"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="phone2"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="metraj"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="metraj"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="parking"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="parking" widget="boolean_toggle"/>
                                </div>
                            </div>
                        </div>
                         <div class="col-6 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="shomare_kart"></label>
                                <div class="col-sm-8 field-char">
                                    <field name="shomare_kart"/>
                                </div>
                            </div>
                        </div>
                         <div class="col-6 mshkt_block">

                        </div>
                        <div class="col-12 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="tozihat"></label>
                                <div class="col-sm-10 field-char">
                                    <field name="tozihat"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mshkt_block">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="con_tarakonesh"></label>
                                <div class="col-sm-10 field-char">
                                    <field name="con_tarakonesh"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sajad_mostajer_action" model="ir.actions.act_window">
        <field name="name">مستاجر</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sajad.mostajer</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>